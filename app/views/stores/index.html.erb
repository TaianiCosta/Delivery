<p style="color: green"><%= notice %></p>

<h1>Stores</h1>

<div id="stores">
  <% @stores.each do |store| %>
    <%= render store %>
    <p>
      <%= link_to "Show this store", store %>
      <%= link_to "Edit", edit_store_path(store) %>
      <%= link_to "Deactivate", deactivate_store_path(store), method: :patch, data: { confirm: "Are you sure you want to deactivate this store?" } %>
    </p>
  <% end %>
</div>

<%= link_to "New store", new_store_path %>
